# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Client_config = debug
  Loader_config = debug
  LuaMod_config = debug
  SampleMod_config = debug
  Server_config = debug

else ifeq ($(config),release)
  Client_config = release
  Loader_config = release
  LuaMod_config = release
  SampleMod_config = release
  Server_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := Client Loader LuaMod SampleMod Server

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Client:
ifneq (,$(Client_config))
	@echo "==== Building Client ($(Client_config)) ===="
	@${MAKE} --no-print-directory -C . -f Client.make config=$(Client_config)
endif

Loader:
ifneq (,$(Loader_config))
	@echo "==== Building Loader ($(Loader_config)) ===="
	@${MAKE} --no-print-directory -C . -f Loader.make config=$(Loader_config)
endif

LuaMod:
ifneq (,$(LuaMod_config))
	@echo "==== Building LuaMod ($(LuaMod_config)) ===="
	@${MAKE} --no-print-directory -C . -f LuaMod.make config=$(LuaMod_config)
endif

SampleMod:
ifneq (,$(SampleMod_config))
	@echo "==== Building SampleMod ($(SampleMod_config)) ===="
	@${MAKE} --no-print-directory -C . -f SampleMod.make config=$(SampleMod_config)
endif

Server:
ifneq (,$(Server_config))
	@echo "==== Building Server ($(Server_config)) ===="
	@${MAKE} --no-print-directory -C . -f Server.make config=$(Server_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f Client.make clean
	@${MAKE} --no-print-directory -C . -f Loader.make clean
	@${MAKE} --no-print-directory -C . -f LuaMod.make clean
	@${MAKE} --no-print-directory -C . -f SampleMod.make clean
	@${MAKE} --no-print-directory -C . -f Server.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Client"
	@echo "   Loader"
	@echo "   LuaMod"
	@echo "   SampleMod"
	@echo "   Server"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"